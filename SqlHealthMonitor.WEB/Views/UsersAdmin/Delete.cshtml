@model SqlHealthMonitor.BLL.Models.Identity.UserLogin.ApplicationUserPageViewModel

@{
    ViewBag.Title = @Resources.Global.Delete;
}

<h2>@Resources.Global.Delete</h2>

<h3>@Resources.Global.ConfirmOfDeleteUser</h3>
<div>
    <hr />
    <dl>
        <dt>
            @Resources.Global.UserName.
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Users.SingleOrDefault().UserName)
        </dd>
    </dl>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            <div style="display:inline-block;clear:both">
                <input type="submit" value=@Resources.Global.Delete class="btn btn-default" />
            </div>
        </div>
    }
    <div>
        @Html.ActionLink(@Resources.Global.BackToList, "Index")
    </div>
        </div>
