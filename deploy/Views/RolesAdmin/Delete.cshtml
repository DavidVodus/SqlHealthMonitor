@model SqlHealthMonitor.BLL.Models.Identity.UserLogin.ApplicationRolePageViewModel

@{
    ViewBag.Title = @Resources.Global.Delete;
}

<h2>@Resources.Global.Delete</h2>

<h3>@Resources.Global.ConfirmOfDeleteRole</h3>
<p>@Resources.Global.ConfirmOfDeleteRoleNotice</p>
<div>
    <hr />
    <dl >
        <dt>
            @Html.DisplayNameFor(model => model.Roles.SingleOrDefault().Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Roles.First().Name)
        </dd>
    </dl>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            <div style="display:inline-block;clear:both">
                <input type="submit" value=@Resources.Global.Delete class="btn btn-default" />
            </div>
        </div>
    }
            

</div>
@section NavBar{
    <ol class="breadcrumb">
        <li class="breadcrumb-item ">
                   @Html.Partial("UsersDropDown", new ViewDataDictionary { { "liClass", "breadcrumb-item" } })
        </li>
        <li class="breadcrumb-item">
            @Html.ActionLink(@Resources.Global.Roles, "Index", "RolesAdmin", null, new { @Class = @Html.IsActive("Index", "RolesAdmin") })
        </li>
        <li class="breadcrumb-item active">
            @Resources.Global.Delete
        </li>
    </ol>

}