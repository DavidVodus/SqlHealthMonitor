@model SqlHealthMonitor.BLL.Models.Identity.RoleViewModel

@{
    ViewBag.Title = @Resources.Global.Create;
}

<h2>@Resources.Global.Create</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Role.</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.Name, new { @class = "col-md-12" })
            <div class="col-md-12">
                @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Name)
            </div>
        </div>

        <div class="form-group">
            <div class=" col-md-12">
                <input type="submit" value=@Resources.Global.Create class="btn btn-default" />
            </div>
        </div>
    </div>
}


@section NavBar{
    <ol class="breadcrumb">
        <li class="breadcrumb-item ">
                   @Html.Partial("UsersDropDown", new ViewDataDictionary { { "liClass", "breadcrumb-item" } })
        </li>
        <li class="breadcrumb-item">
            @Html.ActionLink(@Resources.Global.Roles, "Index", "RolesAdmin", null, new { @Class = @Html.IsActive("Index", "RolesAdmin") })
        </li>
        <li class="breadcrumb-item active">
            @Resources.Global.Create
        </li>
    </ol>

}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
