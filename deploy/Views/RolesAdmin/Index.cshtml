@model SqlHealthMonitor.BLL.Models.Identity.UserLogin.ApplicationRolePageViewModel

@{
    ViewBag.Title = "Role";
}

<h2>Role</h2>

<p>
    @Html.ActionLink(@Resources.Global.Create, "Create")
</p>
<table class="table">
    <tr>
        <th>
           @Resources.Global.RoleName
        </th>
        <th>

        </th>
    </tr>

    @foreach (var item in Model.Roles)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink(@Resources.Global.Edit, "Edit", new { id = item.Id }) |
                @Html.ActionLink(@Resources.Global.Details, "Details", new { id = item.Id }) |
                @Html.ActionLink(@Resources.Global.Delete, "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
@section NavBar{

    @Html.Partial("ManageForeignAccountsNavBar")

}
