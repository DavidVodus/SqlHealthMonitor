@model SqlHealthMonitor.BLL.Models.Identity.RegisterViewModel
@{
    ViewBag.Title = @Resources.Global.Create;
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("Create", "UsersAdmin", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>"@Resources.Global.CreateNewUser"</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-error" })
    <div class="form-group">
        @Html.LabelFor(m => m.UserName, new { @class = "col-md-12" })
        <div class="col-md-12">
            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "col-md-12" })
        <div class="col-md-12">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Password, new { @class = "col-md-12" })
        <div class="col-md-12">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-12" })
        <div class="col-md-12">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-12 control-label" style="text-align:left">
           @Resources.Global.SelectUserRole
        </label>
        <div class="col-md-12">
            @foreach (var item in (SelectList)ViewBag.RoleId)
            {
                <input type="checkbox" name="SelectedRoles" value="@item.Value" class="checkbox-inline" />
                @Html.Label(item.Value, new { @class = "control-label" })
            }
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-12">
            <input type="submit" class="btn btn-default" value= @Resources.Global.Create />
        </div>
    </div>
}
@section NavBar{

    <ol class="breadcrumb">
        <li class="breadcrumb-item ">
                   @Html.Partial("UsersDropDown", new ViewDataDictionary { { "liClass", "breadcrumb-item" } })
        </li>
        <li class="breadcrumb-item">
           @Resources.Global.ForeignAccounts

        </li>
        <li class="breadcrumb-item">
            @Html.ActionLink(Resources.Global.Users, "Index", "UsersAdmin", null, new { @Class = @Html.IsActive("Index", "UsersAdmin") })
        </li>
        <li class="breadcrumb-item active">
            @Resources.Global.Create
        </li>

    </ol>


}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
